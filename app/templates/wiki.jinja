{% extends "./layouts/osu-layout.jinja" %}
{% set current_page = "wiki" %}
{% set title = article_title ~ " | osu! wiki preview" %}
{% set hue = 45 %}

{% block header_buttons %}
	<div class="header-buttons__item">
		<a
			class="btn-osu-big btn-osu-big--rounded-thin"
			href="/osu-wiki-tools/{{ relative_wiki_path }}"
		>
			Check
		</a>
	</div>

	<div class="header-buttons__item">
		<a class="btn-osu-big btn-osu-big--rounded-thin" href="?open">Open</a>
	</div>

	<div class="header-buttons__item">
		<a
			class="btn-osu-big btn-osu-big--rounded-thin"
			href="https://github.com/{{ repo_data['owner'] }}/osu-wiki/blob/master/{{ relative_wiki_path }}"
			title="Show on GitHub"
		>
			<i class="fab fa-github"></i>
		</a>
	</div>

	{% include "./includes/lang-selector.jinja" %}
{% endblock %}

{% block content %}
	<div class="osu-page osu-page--wiki">
		<div class="wiki-page">
			<div class="wiki-page__toc">{% include "./includes/sidebar.jinja" %}</div>
			<div class="wiki-page__content">
				{% include "./includes/front-matter.jinja" %}
				<div class="osu-md osu-md--wiki">{{ html_content|safe }}</div>
			</div>
		</div>
	</div>
{% endblock %}
